<?import com.jfoenix.controls.JFXButton?>
<?import java.lang.String?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.HBox?>
<AnchorPane prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.trackingdevice.controllers.Riddle2SceneController">
   <ScrollPane onMouseClicked="#skipTypewriterAnimation" hbarPolicy="NEVER" prefHeight="750.0" prefWidth="800.0" stylesheets="@css/styles.css">
      <styleClass>
         <String fx:value="blackbg" />
         <String fx:value="scrollpaneblackbg" />
      </styleClass>
      <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="800.0" styleClass="blackbg" stylesheets="@css/styles.css">
         <Text fx:id="terminal" layoutX="10.0" layoutY="20.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="terminaltext" wrappingWidth="760.0" />
      </AnchorPane>
   </ScrollPane>
   <HBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="12.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
      <JFXButton fx:id="playBtn" disable="true" onAction="#playAudio" style="-fx-background-color: #22b3b5;" text="Play Audio Message" textFill="WHITE" />
   </HBox>

</AnchorPane>
